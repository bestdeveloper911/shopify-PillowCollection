// Variable

$color-black: #000000;
$color-white: #FFFFFF;

// Site header

.wrapper-header.wrapper_header_default  {
  .wrapper-header-bt {
    height: 85px;
    position: relative;
    .header-pc, .header-panel-bt {
      height: 100%;
    }
  }
  .header-logo {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    img {
      height: 75px;
      width: auto;
    }
  }
  #dropdown-cart {
    right: 0px;
    left: unset !important;
  }
  .nav-bar ul.site-nav {
    text-align: center;
  }
}


// Homepage slideshow

.shopify-section.home-slideshow-sections {
  .slide-content.style_2 {
    .slide-heading {

    }
    .slide-heading .line {
      display: none !important;
    }
    .slide-text {
      margin-bottom: 20px;
    }
    .slide-button.btn {
      border-bottom: 1px solid $color-black !important;
      box-shadow: none !important;
      font-size: 18px;
      min-width: unset !important;
      width: fit-content;
      padding: 0px !important;
    }
  }
}


// Homepage collection tile

.shopify-section.custom-collection-tile {
  margin-bottom: 30px;

  .collection-tile-wrapper {
    justify-content: space-between;
    position: relative;
    .tile-column {
      max-width: calc(50% - 10px);
      min-width: calc(50% - 10px);
    }
  }
  .collection-tile-item {
    display: flex;
    position: relative;
    label {
      background: #FFFFFF;
      display: flex;
      font-size: 20px;
      font-weight: bold;
      padding: 5px 10px;
      position: absolute;
    }
    &:first-child label {
      top: 50px;
    }
    .image_wrapper {
      width: 100%;
      overflow: hidden;
      &:hover img {
        transform: scale(1.1);
      }
      img {
        width: 100%;
        transition: all .7s ease;
      }
    }
  }
  .tile-column.tiles {
    flex-wrap: wrap;
    justify-content: space-between;
    position: absolute;
    right: 0px; 
    height: 100%;
    .collection-tile-item {
      width: 100%;
      min-height: calc(50% - 10px);
      max-height: calc(50% - 10px);
      .image_wrapper {
        width: 100%;
        overflow: hidden;
        &:hover img {
          transform: scale(1.1);
        }
      }
      img {
        height: 100%;
        width: 100%;
        object-fit: cover;
      }
      &:first-child {
        min-width: 40%;
        max-width: 40%;
        label {
          bottom: 30px;
          top: unset;
        }
      }
      &:nth-child(2) {
        min-width: calc(60% - 20px);
        max-width: calc(60% - 20px);
        label {
          bottom: 30px;
          right: 0px;
        }
      }
      &:last-child {
        margin-top: auto;
        label {
          bottom: 30px;
        }
      }
    }
  }
}


// Homepage sub banner

.sub-banner.banner-item.btn-under {
  .banner-btn {
    background: #3e3e3e;
    color: $color-white;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 18px;
    margin-top: 22px;
    margin-left: auto;
    margin-right: auto;
    height: 45px;
    width: 160px;
  }
}

// Homepage icon-list section

.custom-icon-list {
  .icon-list.d-flex {
    display: flex;
    justify-content: space-between;
    max-width: 800px;
    margin: 30px auto;
  }
  .list-wrapper {
    text-align: center;
  }
  .image_wrapper img {
    height: 75px;
    width: auto;
  }
  .list-title {
    font-size: 14px;
  }
  @media(max-width: 750px) {
    .image_wrapper {
      margin-bottom: 10px;
      img {
        max-height: 45px;
      }
    }
  }
}


// Product page

body.template-product .product-template {
  .size-chart-open-popup {
    float: unset;
  }
  .product-img-box {
    @media (min-width: 750px) {
      button.slick-arrow {
        border-radius: 50%;
        box-shadow: 0 0 10px #0000002e;
        &.slick-prev {
          top: -20px;
        }
        &.slick-next {
          bottom: -20px;
        }
      }
    }
  }

  .product-shop {
    .product-title {
      font-weight: normal;
      font-size: 34px;
    }
    .prices {
      font-size: 24px;
      margin-bottom: 45px;
    }
  }

  form .swatch.swatch-color {
    .swatch-element {
      label.swatch_variant_img {
        border-radius: 50px;
        min-width: 50px;
        width: 50%;
        height: 50px;
        padding: 0px;
        span.bgImg {
          background-size: 120% 120% !important;
        }
      }
      label::after {
        border-width: 1px;
      }
    }
  }
  form .swatch {
    margin-top: 30px;
    & > .header {
      font-weight: 600;
      font-size: 14px;
      text-decoration: underline;
      text-underline-position: under;
    }
    .swatch-element {
      label::after {
        border-width: 1px;
      }
    }
  }
  form .swatch:not(.swatch-color) {
    .swatch-element label {
      padding-left: 10px;
      padding-right: 10px;
    }
  }
  form .quantity {
    margin-top: 30px;
    label {
      font-size: 14px;
      margin-bottom: 10px;
      text-decoration: underline;
      text-underline-position: under;
    }
    .qty-group {
      border: none;
      max-width: 125px;
      input {
        background: $color-black;
        border: none;
        border-radius: 0px;
        color: $color-white;
        width: 60px;
      }
      a {
        border: 1px solid #cbcbcb;
        &[data-minus-qtt] {
          border-right: none;
        }
        &[data-plus-qtt] {
          border-left: none;
        }
      }
      & > * {
        height: 40px;
      }
    }
  }

  form .groups-btn {
    #product-add-to-cart {
      font-size: 16px;
      max-width: 260px;
    }
  }
}


// Product Grid Swatch

.products-grid .grid-item .item-swatch {
  label {
    border-width: 1px;
    position: relative;
    img {
      max-width: unset;
      max-height: unset;
      width: 130%;
      height: 130%;
      position: absolute;
      object-fit: cover;
      object-position: center;
      left: 50%;
      top: 50%;
      transform: translate(-50%, -50%);
    }
  }
}

// Collection Page

.collection__header {
  margin-bottom: 30px;
  position: relative;
  
  & > .image_wrapper {
    width: 55%;
    @media (max-width: 750px) {
      width: 100%;
    }
  }

  .content_wrapper {
    background: #f9f5f5e8;
    padding: 45px;
    position: relative;
    @media (max-width: 750px) {
      margin-top: -30%;
      width: 90%;
      left: 5%;
    }
    @media (min-width: 750px) {
      max-width: 40%;
      top: 50%;
      left: calc(50% - 60px);
      transform: translateY(-50%);
      position: absolute;
    }
    * {
      position: relative;
      z-index: 2;
    }
    &::after {
      content: '';
      border: 1px solid $color-black;
      display: block;
      left: 10px;
      top: 10px;
      width: calc(100% - 20px);
      height: calc(100% - 20px);
      position: absolute;
      z-index: 1;
    }
    .title {
      font-family: 'Archivo' ,serif;
      font-size: 35px;
      margin-bottom: 15px;
    }
    .desc {
      font-size: 14px;
    }
    .btn_wrapper {
      margin-top: 15px;
      a {
        color: $color-black;
        font-family: 'Archivo' ,serif;
        font-weight: 500;
        font-size: 18px;
        text-decoration: underline;
        text-underline-position: under;
      }
    }
  }

  .custom-icon-list {
    @media (min-width: 750px) {
      left: calc(55% + 10px);
      position: absolute;
      bottom: 10px;
    }
    @media (max-width: 750px) {
      margin-top: 30px;  
    }
    
    .icon-list {
      margin: 0px;
    }
    img {
      max-height: 45px;
    }
    .list-wrapper {
      padding-left: 20px;
      padding-right: 20px;
    }
  }

}

