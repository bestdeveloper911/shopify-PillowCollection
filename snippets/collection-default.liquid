<div class="collection-template collection-template-default">
  <div class="collection__header" style="background: {{ section.settings.banner_bg }}">
    {% if collection.image != blank %}
      <div class="image_wrapper">
        <img data-src="{{ collection.image | img_url: '2000x' }}" class="lazyload">
      </div>
      <div class="content_wrapper">
        <div class="title">{{ collection.title }}</div>
        <div class="desc">{{ collection.description }}</div>
        <div class="btn_wrapper"><a href="{{ collection.products.first.url }}">SHOP NOW</a></div>
      </div>
      {% render 'custom-icon-list' %}
    {% endif %}
  </div>
  <div class="container">
    {% render 'breadcrumb' %}
    <div class="halo-collection-content">
      <div class="row">
        {% render 'sidebar-filter' %}
        {% render 'collection-template-default' %}
      </div>
    </div>   
  </div>
</div>